<!DOCTYPE html>
<html>
  <head>
    <title>Bootstrap2</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
    <body>
      <div class='container'>
        <% if logged_in? %>
        <header>
          <nav class="navbar navbar-default">
          	<div class="container-fluid">
          		<div class="navbar-header">
          			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample1">
          				<span class="sr-only">Toggle navigation</span>
          				<span class="icon-bar"></span>
          				<span class="icon-bar"></span>
          				<span class="icon-bar"></span>
          			</button>
          			<a class="navbar-brand" href="#">各種メニュー</a>
          		</div>

          		<div class="collapse navbar-collapse" id="navbarEexample1">
          			<ul class="nav navbar-nav">
          				<li><%= link_to 'TOP画面へ', top_blogs_path %></li>
          				<li><%= link_to '新規ブログを作成へ', new_blog_path %></li>
          				<li><%= link_to 'ブログ一覧へ', blogs_path %></li>
                  <li><%= link_to "Profile", user_path(current_user.id) %></li>
                  <li><%= link_to "Logout", session_path(current_user.id), method: :delete %></li>
          			</ul>
          		</div>
          	</div>
          </nav>
        </header>
        <% else %>
        <header>
          <nav class="navbar navbar-default">
          	<div class="container-fluid">
          		<div class="navbar-header">
          			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample1">
          				<span class="sr-only">Toggle navigation</span>
          				<span class="icon-bar"></span>
          				<span class="icon-bar"></span>
          				<span class="icon-bar"></span>
          			</button>
          			<a class="navbar-brand" href="#">各種メニュー</a>
          		</div>

          		<div class="collapse navbar-collapse" id="navbarEexample1">
          			<ul class="nav navbar-nav">
          				<li><%= link_to 'TOP画面へ', top_blogs_path %></li>
          				<li><%= link_to "Sign up", new_user_path %></li>
          				<li><%= link_to "Login", new_session_path %></li>
          			</ul>
          		</div>
          	</div>
          </nav>
        </header>
        <% end %>
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>

        <%= yield %>

        <footer>
          <p>運営会社DIVE INTO CODE株式会社</p>
          <p>© 2015-2016 Copyright DIVE INTO CODE Corp.</p>
        </footer>
      </div>
    </body>
</html>
